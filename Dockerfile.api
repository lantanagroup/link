FROM maven:3.6.3-openjdk-11 AS build

RUN addgroup -S spring && adduser -S spring -G spring
USER spring:spring

ARG build
ARG version

WORKDIR /tmp

# Copy code and compile
COPY . .

RUN echo "version: $version\nbuild: $build" > api/src/main/resources/build.yml

WORKDIR /tmp
RUN mvn -pl api -am install

FROM tomcat:jdk15-openjdk-oracle
RUN adduser -U -d ${CATALINA_HOME} -s /bin/bash dummy && chown -R dummy:dummy ${CATALINA_HOME}
USER dummy:dummy
COPY --from=build /tmp/api/target/link-api.war /usr/local/tomcat/webapps/ROOT.war
EXPOSE 8080
CMD ["catalina.sh", "run"]
